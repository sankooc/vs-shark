{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pcapviewer-gui",
  "version": "0.4.10",
  "identifier": "com.pcapviewer.sankooc",
  "build": {
    "devUrl": "http://localhost:5173/gui.html",
    "frontendDist": "../../dist/gui"
  },
  "app": {
    "windows": [
      {
        "title": "Pcap Viewer GUI",
        "label": "main",
        "fullscreen": false,
        "width": 1000,
        "height": 800,
        "center": true,
        "visible": false
      },
      {
        "label": "splashscreen",
        "url": "/loading.html",
        "width": 1000,
        "height": 800,
        "center": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb", "rpm", "msi", "dmg", "app"
    ],
    "icon": ["icons/icon.ico", "icons/icon.png", "icons/icon.icns"],
    "fileAssociations": [
      {
        "ext": [
          "pcap",
          "pcapng",
          "cap"
        ],
        "name": "PCAP File",
        "role": "Editor"
      }
    ]
  }
}